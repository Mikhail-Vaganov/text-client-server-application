<Window x:Class="Jabber.Client.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jabber.Client"
        Icon="client.ico"
        Title="Connection" ResizeMode="NoResize" Width="220" Height="90">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label VerticalAlignment="Center">Server address:</Label>
                <TextBox Name="ServerAddress" Width="100" Height="20" >localhost:8080</TextBox>
            </StackPanel>
            <Button Margin="2,2,2,2" Width="80" Click="Button_Click">Connect</Button>
        </StackPanel>
    </Grid>
</Window>
